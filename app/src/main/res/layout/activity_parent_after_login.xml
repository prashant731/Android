<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent_after_login">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentImagesrc"
                android:layout_centerInParent="true"
                android:src="@drawable/admin_login"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Student's Name"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="18dp"
                android:padding="5dip"
                android:background="@drawable/edittext_rounded"
                android:id="@+id/usernameStudsrc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enrollment Number"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="18dp"
                android:padding="5dip"
                android:background="@drawable/edittext_rounded"
                android:id="@+id/passwordStudsrc"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Login"
                android:textColor="@color/textColor"
                android:backgroundTint="@color/themeColor"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="18dp"
                android:padding="5dip"
                android:background="@drawable/edittext_rounded"
                android:onClick="callDetailStudentsrc"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
