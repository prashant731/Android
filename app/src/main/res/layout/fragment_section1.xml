<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="section1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:id="@+id/gre"
                android:text="GRE"
                android:onClick="callDetailGRE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:id="@+id/gmat"
                android:text="GMAT"
                android:onClick="callDetailGMAT"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:text="SAT"
                android:id="@+id/sat"
                android:onClick="callDetailSAT"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:text="TOEFL"
                android:id="@+id/toefl"
                android:onClick="callDetailTOEFL"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:text="COURSEX"
                android:id="@+id/coursex"
                android:onClick="callDetailCOURSEX"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:text="COURSEY"
                android:id="@+id/coursey"
                android:onClick="callDetailCOURSEY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/themeColor"
                android:text="COURSEZ"
                android:id="@+id/coursez"
                android:onClick="callDetailCOURSEZ"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
